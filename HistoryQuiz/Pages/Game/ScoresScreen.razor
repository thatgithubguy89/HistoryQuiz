@page "/scores"

<div class="container text-center">
    <h3>Scores</h3>
</div>

@if (players == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-hover container text-center">
        <thead>
            <tr>
                <th scope="col">Player</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in players)
            {
                <tr class="table-light">
                    <td>@player.Initials</td>
                    <td>@player.Score</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    @inject ILogger<ScoresScreen> _logger;
    @inject IPlayerRepository _playerRepository;

    private IEnumerable<Player> players;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            players = await _playerRepository.GetAllPlayersAsync(); // Get all players from the database
        }
        catch (Exception ex)
        {
            _logger.LogError("Failed to access players. Component: ScoresScreen Method: OnInitializedAsync\n", ex);
        }
    }
}
